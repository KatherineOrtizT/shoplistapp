<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <link rel="stylesheet" href="/CSS/Estilos.css" />
        {% endblock %}
            
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {# <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script>
                $(document).ready(function() {
                    // Escucha el evento de envío del formulario de búsqueda
                    $('#search-form').submit(function(event) {
                        event.preventDefault(); // Evita el envío del formulario por defecto

                        // Obtiene el término de búsqueda del formulario
                        var query = $('#search-input').val();

                        // Realiza la solicitud Ajax
                        $.ajax({
                            url: '{{ path('app_productos_buscar') }}',
                            method: 'GET',
                            data: { q: query },
                            beforeSend: function() {
                                // Muestra un indicador de carga o mensaje de espera
                                $('#ajax-results').html('Cargando resultados...');
                            },
                            success: function(response) {
                                // Actualiza el contenido del contenedor con los resultados
                                $('#ajax-results').html(response);
                            },
                            error: function() {
                                // Muestra un mensaje de error en caso de fallo en la solicitud
                                $('#ajax-results').html('Error al cargar los resultados');
                            }
                        });
                    });
                });
            </script> #}

        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
